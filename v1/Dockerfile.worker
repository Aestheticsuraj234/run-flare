FROM node:20-alpine

WORKDIR /app

COPY package.json package-lock.json* ./

RUN npm ci

# Install Docker CLI for wrangler to spawn containers
RUN apk add --no-cache docker-cli

COPY . .

# Expose the port wrangler dev runs on
EXPOSE 8787

# Run wrangler dev
CMD ["npx", "wrangler", "dev", "--ip", "0.0.0.0", "--port", "8787"]
