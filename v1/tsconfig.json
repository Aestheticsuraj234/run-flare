{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,

    "isolatedModules": true,
    "noEmit": true,

    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,

    "types": [
      "@cloudflare/workers-types",
      "./worker-configuration.d.ts"
    ]
  }
}
